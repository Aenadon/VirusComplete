<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScanFileLookup"
    tools:showIn="@layout/activity_scan_file_lookup">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/box_filehash"
        android:maxLength="64"
        android:hint="@string/hash_input_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lookup_file"
            android:layout_weight="0.5"
            android:onClick="lookupHash" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/paste_value"
            android:layout_weight="0.5"
            android:onClick="pasteValue" />
    </LinearLayout>


    <ListView
        android:id="@+id/list_file_scan_lookup_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp" />


</LinearLayout>
